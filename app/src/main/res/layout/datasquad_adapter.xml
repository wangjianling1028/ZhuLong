<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:padding="@dimen/dp_10"
        android:layout_margin="@dimen/dp_10"
        app:cardCornerRadius="@dimen/dp_10"
        app:cardElevation="@dimen/dp_10"
        >
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_5"
                android:id="@+id/image_squad"
                android:layout_width="@dimen/dp_80"
                android:layout_height="@dimen/dp_60"/>

            <LinearLayout
                android:layout_marginLeft="@dimen/dp_20"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:textSize="@dimen/sp_15"
                    android:id="@+id/name_squad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


                <LinearLayout
                    android:layout_marginTop="@dimen/dp_15"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_25">

                    <ImageView
                        android:background="@mipmap/ic_people_count"
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_20"/>

                    <TextView
                        android:id="@+id/reshu_squad"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>


                    <TextView
                        android:id="@+id/guanzhu_squad"
                        android:layout_marginLeft="@dimen/dp_80"
                        android:layout_width="@dimen/dp_40"
                        android:layout_height="@dimen/dp_21"
                        android:text="+关注"
                        android:textSize="@dimen/sp_11"
                        android:textColor="@color/mine_selector"
                        android:background="@drawable/attention_selector"
                        />
                </LinearLayout>

                <TextView
                    android:id="@+id/data_squad"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_22"
                    android:layout_marginTop="@dimen/dp_10" />
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>