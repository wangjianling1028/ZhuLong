<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_10">

    <com.jiyun.zhulong.design.RoundImage
        android:id="@+id/img_group_specialty"
        android:layout_width="@dimen/dp_32"
        android:layout_height="@dimen/dp_30"
        android:layout_margin="@dimen/dp_10"
        android:src="@mipmap/default_head"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_group_specialty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:text="设计学院"
        android:textSize="@dimen/sp_18"
        app:layout_constraintBottom_toBottomOf="@+id/img_group_specialty"
        app:layout_constraintLeft_toRightOf="@+id/img_group_specialty"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_child_specialty"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/sp_10"
        app:layout_constraintTop_toBottomOf="@+id/img_group_specialty" />

</androidx.constraintlayout.widget.ConstraintLayout>